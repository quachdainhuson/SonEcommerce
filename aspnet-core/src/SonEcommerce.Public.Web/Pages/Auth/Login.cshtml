@page "/login.html"
@model SonEcommerce.Public.Web.Pages.Auth.LoginModel
@{
}
<section class="section-box shop-template mt-60">
    <div class="container">
        <div class="row mb-100">
            <div class="col-lg-1"></div>
            <div class="col-lg-5">
                <h3>Đăng nhập khách hàng</h3>
                <p class="font-md color-gray-500">Chào mừng quay trở lại!</p>
                <form method="post" class="form-login mt-30 mb-30">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="mb-5 font-sm color-gray-700">Email / Điện thoại / Tên đăng nhập *</label>
                        <input asp-for="Username" class="form-control" type="text" placeholder="stevenjob@gmail.com">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="mb-5 font-sm color-gray-700">Mật khẩu *</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="******************">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="color-gray-500 font-xs">
                                    <input class="checkagree" type="checkbox">Ghi nhớ
                                </label>
                            </div>
                        </div>
                        <div class="col-lg-6 text-end">
                            <div class="form-group"><a class="font-xs color-gray-500" href="#">Quên mật khẩu?</a></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input class="font-md-bold btn btn-buy" type="submit" value="Đăng nhập">
                    </div>
                    <div class="mt-20"><span class="font-xs color-gray-500 font-medium">Đã có tài khoản?</span><a class="font-xs color-brand-3 font-medium" href="/register.html">Đăng kí</a></div>
                </form>
            </div>
            <div class="col-lg-5"></div>
        </div>
    </div>
</section>

