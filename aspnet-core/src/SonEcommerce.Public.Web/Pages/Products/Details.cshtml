<script>
    document.addEventListener('DOMContentLoaded', function () {
        var quantityInput = document.getElementById('quantityInput');
        var addToCartLink = document.getElementById('addToCartLink');

        function updateAddToCartLink() {
            var quantity = quantityInput.value;
            if (!isNaN(quantity) && quantity > 0) {
                addToCartLink.href = '/shop-cart.html?action=add&id=@Model.Product.Id&quantity=' + quantity;
            } else {
                addToCartLink.href = '/shop-cart.html?action=add&id=@Model.Product.Id&quantity=1';
            }
        }

        quantityInput.addEventListener('input', updateAddToCartLink);

        // Optional: Add functionality to plus and minus buttons if they are to be used
        document.querySelector('.plus-cart').addEventListener('click', function () {
            quantityInput.value = parseInt(quantityInput.value);
            updateAddToCartLink();
        });

        document.querySelector('.minus-cart').addEventListener('click', function () {
            if (quantityInput.value > 1) {
                quantityInput.value = parseInt(quantityInput.value);
                updateAddToCartLink();
            }
        });
    });
</script>