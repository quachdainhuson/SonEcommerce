@model SonEcommerce.Public.Products.ProductInListDto
@using SonEcommerce.Public.Products;
@inject IProductsAppService _productsAppService;
@{
    var urlCate = $"/products/{Model.CategorySlug}/{Model.Slug}.html";
    var fileContent = await _productsAppService.GetThumbnailImageAsync(Model.ThumbnailPicture);
    var base64Image = SonEcommerce.Helpers.ImageHelper.ShowBase64(Model.ThumbnailPicture, fileContent);

}
<div class="card-grid-style-3 home6-style">
    <div class="card-grid-inner">
        
        <div class="image-box">
            @* <span class="label bg-brand-2">-17%</span> *@
            <a href="@urlCate"><img src="@base64Image" alt="@Model.Name"></a>
        </div>
        <div class="info-right">
            <p class="font-xs color-gray-500">@Model.ManufacturerName</p><br>

            <a class="color-brand-3 font-sm-bold" href="shop-single-product-2.html">@Model.Name</a>
            <div class="price-info mb-10">
                <strong class="font-lg-bold color-brand-3 price-main">$@Model.SellPrice.ToString() </strong>
            </div>
            <div class="mt-10 box-btn-cart">
                <a class="btn btn-cart" href="/shop-cart.html?action=add&id=@Model.Id">Add To Cart</a>
            </div>
        </div>
    </div>
</div>